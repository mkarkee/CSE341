<body>
<%- include('../../includes/shop-nav-bar.ejs') %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%=item.title %></h1>
    
  </div>
</div>
<div class="form">
    <form action="/admin/edit-product" method="POST">
        <input type="hidden" value="<%= item._id %>" name="productId" >
