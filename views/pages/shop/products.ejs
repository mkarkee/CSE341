<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/stylesheets/display.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/shop-nav-bar.css" />
</head>

<body>
<%- include('../../includes/shop-nav-bar.ejs') %>
<div class="jumbotron text-center">
  <div class="container">
    <h1>Your Book has been added.</h1>
    <u><a href="/prove02" style="color: white;">Click here to add more books.</a></u>
  </div>
</div>

<div class="container">
  
  <div class = "books-container">

    <% prods.forEach(item => { %>
      <div> 
        <h3 class="title"><%=item.title %></h3>
        <p class="summary"><%=item.description %></p>
        <a href="/prove/products/<%= item._id %>" class="btn">Details</a>
        <form action="/prove/cart" method="POST">
          <button class="btn">Add to Cart</button>
          <input type="hidden" name="productId" value="<%= item.id %>">
        </form>
        
      </div>
      <% }) %>
  </div>
  

</div>


</body>
<script>
  //script for setting random colors
  titles = document.getElementsByClassName("title");
  summaries = document.getElementsByClassName('summary');
  for(i=0; i < titles.length; i++) {
    var randomColor ='#' + Math.floor(Math.random()*16777215).toString(16);
    if(randomColor == '#ffffff') {
      randomColor = '#000000';
    }
    titles[i].style.backgroundColor = randomColor;
    titles[i].style.borderColor = randomColor;
    summaries[i].style.borderColor = randomColor;
  }
  
</script>
</html>