<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/shop' ? 'active' : '' %>" href="/prove/products">Shop</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/prove/products">Products</a>
            </li>
            <% if(isAutheticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/prove/cart">Cart</a>
            </li>
            <!-- <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li> -->
            
           <li class="main-header__item">
                <a class="<%= path === '/prove/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product
                </a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/product-list">Admin Products
                </a>
            </li> 
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if(!isAutheticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
            <% } else {%>
                <li class="main-header__item">
                    <form action="/logout" method="POST">
                        <button type="submit">logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>
